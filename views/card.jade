doctype html
html(lang="en")
  head
    meta(content="text/html; charset=UTF-8", http-equiv="Content-Type")
    meta(name="twitter:card", content="player")
    meta(name="twitter:site", content="@twhisprer")
    meta(name="twitter:title", content="@#{author} said")
    meta(name="twitter:description", content="Hear what #{author} just tweeted")
    meta(name="twitter:player", content="https://twhispr.com/player/#{scTrackId}")
    meta(name="twitter:player:width", content="480")
    meta(name="twitter:player:height", content="480")
    meta(name="twitter:image", content="/images/#{randomImage}")
    meta(name="twitter:player:stream", content="https://soundcloud.com/twhisprer/#{author}-#{scId}")
    meta(name="twitter:player:stream:content_type", content="application/octet-stream")
  body
    iframe(
        width = "100%"
        height = "450"
        scrolling = "no"
        frameborder = "no"
        src = "https://w.soundcloud.com/player/?url=https://api.soundcloud.com/tracks/#{scTrackId}&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&visual=true"
        )
    h4 Check out what @#{author} just 
        a(href="https://twhispr.com/player/#{scTrackId}") said


